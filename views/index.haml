!!!5
%head
  %title RubuClone
  %script{src:"/jquery.min.js"}
  %script{src:"/application.js"}
  %link{href:"/style.css",type:"text/css",rel:"stylesheet"}

%body
  #container.container
    %header.center
      %h1 RubuClone
    %section
      %form{:action => "/", :method => "post", 'class' => ' form-horizontal'}
        %ul.unstyled
          %li
            %label{for:"regex"} Regex
            %input#regex{:type => "text", :name => "regex", :value => params[:regex] }
          %li
            %label{for:"string"} String
            %textarea#string{:type =>"text", :name => "string", :value => params[:string] }

      %p Result
      #result
        = @result
      %p Matches
      #matches
        %ol

